<TargetEndpoint name="fhir-converter-target">
  <FaultRules>
    <FaultRule name="access_token_expired">
      <Step>
        <Name>ExtractVariables.OAuthErrorFaultString</Name>
      </Step>
      <Step>
        <Name>AssignMessage.OAuthPolicyErrorResponse</Name>
      </Step>
      <Condition>oauthV2.OauthV2.VerifyAccessToken.failed</Condition>
    </FaultRule>
  </FaultRules>
  <PreFlow>
    <Request>
      <Step>
        <Name>OauthV2.VerifyAccessToken</Name>
      </Step>
      <Step>
        <Name>Quota</Name>
      </Step>
      <Step>
        <Name>SpikeArrest</Name>
      </Step>
      <Step>
        <Name>RaiseFault.InvalidContentType</Name>
        <Condition>request.header.Content-Type != "application/fhir+json; fhirVersion=3.0" and request.header.Content-Type != "application/fhir+xml; fhirVersion=3.0"</Condition>
      </Step>
      <Step>
        <Name>RaiseFault.InvalidAcceptHeader</Name>
        <Condition>request.header.Accept != "application/fhir+json; fhirVersion=4.0" and request.header.Accept != "application/fhir+xml; fhirVersion=4.0"</Condition>
      </Step>
    </Request>
  </PreFlow>
  <HTTPTargetConnection>
    {{ HOSTED_TARGET_CONNECTION }}
  </HTTPTargetConnection>
</TargetEndpoint>
